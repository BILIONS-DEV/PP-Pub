{{- /*gotype: source/apps/frontend/controller.AssignAdTagAdd*/ -}}
{{$LangAdTag := .Schema.LANG.Pages.AdTag}}

<style>
.pp10.form-control{
    width: 100%;
}
</style>
<form id="AddAdTag" data-url="/adtag/add" onsubmit="return false">
    <div class="sidebar-contents">
        <input hidden value="{{.InventoryId}}" name="inventory_id"/>
        <div class="sidebar-content">
            <h3>{{$LangAdTag.Name}}</h3>
            <div class="sidebar-content-1">
                <div class="pp-9">
                    <input type="url" id="name" name="name" class="form-control"
                           placeholder="{{$LangAdTag.NamePlaceholder}}">
                    <span class="form-text w-auto invalid-feedback"></span>
                </div>
            </div>
        </div>
        <div class="sidebar-content">
            <h3>{{$LangAdTag.AdType}}</h3>
            <div class="sidebar-content-1 cus-selectpicker box-selectpicker pp-9">
                <select id="ad_tag_type" name="ad_tag_type" class="form-control selectpicker">
                    {{range .AdTypes}}
                        <option value="{{.TableAdType.Id}}">{{.TableAdType.Name}}</option>
                    {{end}}
                </select>
            </div>
            <span class="form-text w-auto invalid-feedback"></span>
        </div>
        <div class="sidebar-content">
            <h3>{{$LangAdTag.Status}}</h3>
            <div class="pp7">
                <label class="switch"> <input type="checkbox" id="status" name="status" checked>
                    <span class="slider round"></span> </label>
                <div class="pp8"></div>
            </div>

            <div class="box_shift_content d-none">
                <div class="pp15">
                    <div class="pp5"><h3 class="m-0">Shift Content</h3></div>
                    <span class="pp16 mt-0" type="button" tabindex="0" data-bs-toggle="popover"
                          data-bs-content="This setting will allow/not allow the sticky ad to shift the content of website when it appear"
                          data-original-title="" title=""
                          data-bs-original-title="">
                        <svg viewBox="64 64 896 896" data-icon="question-circle" width="1em" height="1em"
                             fill="currentColor" type="button" tabindex="0">
                            <path d="M512 64C264.6 64 64 264.6 64 512s200.6 448 448 448 448-200.6 448-448S759.4 64 512 64zm0 820c-205.4 0-372-166.6-372-372s166.6-372 372-372 372 166.6 372 372-166.6 372-372 372z"></path>
                            <path d="M623.6 316.7C593.6 290.4 554 276 512 276s-81.6 14.5-111.6 40.7C369.2 344 352 380.7 352 420v7.6c0 4.4 3.6 8 8 8h48c4.4 0 8-3.6 8-8V420c0-44.1 43.1-80 96-80s96 35.9 96 80c0 31.1-22 59.6-56.1 72.7-21.2 8.1-39.2 22.3-52.1 40.9-13.1 19-19.9 41.8-19.9 64.9V620c0 4.4 3.6 8 8 8h48c4.4 0 8-3.6 8-8v-22.7a48.3 48.3 0 0130.9-44.8c59-22.7 97.1-74.7 97.1-132.5.1-39.3-17.1-76-48.3-103.3zM472 732a40 40 0 1080 0 40 40 0 10-80 0z"></path>
                        </svg>
                    </span>
                </div>
                <div class="pp7">
                    <label class="switch">
                        <input type="checkbox" id="shift_content" name="shift_content">
                        <span class="slider round"></span> </label>
                    <div class="pp8"></div>
                </div>
            </div>
        </div>

        <div class="sidebar-content ad_refresh">
            <h3>Ad Refresh</h3>
            <div class="sidebar-content-1 cus-selectpicker box-selectpicker pp-9">
            <select id="ad_refresh" name="ad_refresh" class="form-control selectpicker">
                    <option value="domain_configuration">Domain Configuration</option>
                    <option value="individual_tag_configuration">Individual Tag Configuration</option>
            </select>
            </div>
            {{/*Ad Refresh*/}}

            <div class="individual_tag_configuration mt-4 d-none">
                <h3>Ad Refresh Time</h3>
               <div class="pp-9">
                    <div class="pp7">
                        <input style="border-top-right-radius: 0;border-bottom-right-radius: 0;" class="pp10 form-control" type="number" placeholder="30" id="ad_refresh_time" name="ad_refresh_time" min="1">
                        <span class="pp11">seconds</span>
                    </div>
                    <span class="form-text ms-2 w-auto invalid-feedback"></span>
                </div>
            </div>
            {{/*Ad Refresh Time*/}}
        
        </div>

        <div id="ConfigDisplayBox" class="box-config" data-adtype="1">
            <div class="sidebar-content {{if eq .InventoryConfig.TableInventoryConfig.GamAutoCreate 1}}d-none{{end}}"
                 id="gam_ad_display">
                <h3>{{$LangAdTag.GAMAdUnit}}
                    <span class="pp16" type="button" tabindex="0" data-bs-toggle="popover"
                          data-bs-content="{{$LangAdTag.GAMAdUnitDesc}}">
                    <svg viewBox="64 64 896 896" data-icon="question-circle" width="1em" height="1em"
                         fill="currentColor" type="button" tabindex="0">
                        <path d="M512 64C264.6 64 64 264.6 64 512s200.6 448 448 448 448-200.6 448-448S759.4 64 512 64zm0 820c-205.4 0-372-166.6-372-372s166.6-372 372-372 372 166.6 372 372-166.6 372-372 372z"></path>
                        <path d="M623.6 316.7C593.6 290.4 554 276 512 276s-81.6 14.5-111.6 40.7C369.2 344 352 380.7 352 420v7.6c0 4.4 3.6 8 8 8h48c4.4 0 8-3.6 8-8V420c0-44.1 43.1-80 96-80s96 35.9 96 80c0 31.1-22 59.6-56.1 72.7-21.2 8.1-39.2 22.3-52.1 40.9-13.1 19-19.9 41.8-19.9 64.9V620c0 4.4 3.6 8 8 8h48c4.4 0 8-3.6 8-8v-22.7a48.3 48.3 0 0130.9-44.8c59-22.7 97.1-74.7 97.1-132.5.1-39.3-17.1-76-48.3-103.3zM472 732a40 40 0 1080 0 40 40 0 10-80 0z"></path>
                    </svg>
                </span>
                </h3>

                <div class="sidebar-content-1">
                    <div class="pp-9">
                        <input id="gam_display" name="gam_display" type="text"
                               placeholder="{{$LangAdTag.GAMAdUnitPlaceholder}}"
                               {{if eq .DisabledGam true}}disabled{{end}} autocomplete="off"/>
                        <span class="form-text w-auto invalid-feedback"></span>
                    </div>
                </div>
            </div>
            {{/*GAM Ad Unit*/}}

            <div class="sidebar-content">
                <h3>Ad Size</h3>
                <div class="sidebar-content-1 cus-selectpicker box-selectpicker pp-9">
                    <select id="ad_size" name="ad_size" data-live-search="true"
                            class="form-select form-control selectpicker" data-size="12">
                        <option value="1">Fixed</option>
                        <option value="2">Responsive</option>
                    </select>
                </div>
                <span class="form-text w-auto invalid-feedback"></span>
            </div>
            {{/*Ad Size*/}}

            <div class="sidebar-content ad_size_responsive d-none">
                <h3>Responsive Type</h3>
                <div class="sidebar-content-1 cus-selectpicker box-selectpicker pp-9">
                    <select id="responsive_type" name="responsive_type" data-live-search="true" data-size="12"
                            class="form-control selectpicker">
                        <option value="1">Horizontal</option>
                        <option value="2">Square</option>
                        <option value="3">Vertical</option>
                    </select>
                </div>
                <span class="form-text w-auto invalid-feedback"></span>
            </div>
            {{/*Responsive Type*/}}

            <div class="sidebar-content ad_size_fixed">
                <h3>{{$LangAdTag.PrimaryAdSize}}</h3>
                <div class="sidebar-content-1 cus-selectpicker box-selectpicker pp-9">
                    <select id="primary_ad_size" name="primary_ad_size" class="form-control selectpicker"
                            title="{{$LangAdTag.PrimaryAdSizePlaceholder}}" data-live-search="true" data-size="6">
                        {{if .AdSizes}}
                            {{range .AdSizes}}
                                <option value="{{.TableAdSize.Id}}">
                                    {{.TableAdSize.Name}}
                                </option>
                            {{end}}
                        {{end}}
                    </select>
                </div>
                <span class="form-text w-auto invalid-feedback"></span>
            </div>
            {{/*Primary Ad Size*/}}

            <div class="sidebar-content ad_size_fixed">
                <h3>{{$LangAdTag.AdditionalAdSize}}</h3>
                <div class="sidebar-content-1 cus-selectpicker box-selectpicker pp-9">
                    <select id="additional_ad_size" name="additional_ad_size" class="form-control  selectpicker"
                            disabled
                            multiple="multiple" data-live-search="true" data-size="6" data-actions-box="true"
                            data-selected-text-format="count > 5"
                            title="{{$LangAdTag.AdditionalAdSizePlaceholder}}"> </select>
                </div>
            </div>
            {{/*Additional Ad Sizes*/}}

            <div class="sidebar-content">
                <h3>Sticky 4k</h3>
                <div class="pp7">
                    <label class="switch">
                        <input type="checkbox" class="sticky4k" id="sticky4k" name="sticky4k" checked>
                        <span class="slider round"></span>
                    </label>
                    <div class="pp8"></div>
                </div>
            </div>
            {{/*Sticky 4k*/}}

            <div class="sidebar-content">
                <h3>{{$LangAdTag.Passback}}</h3>
                <textarea id="pass_back" name="pass_back" style="margin: 20px 0;" class="pp17" spellcheck="false" placeholder="{{$LangAdTag.PassbackPlaceholder}}"></textarea>
                <span class="form-text w-auto invalid-feedback"></span>
            </div>
            {{/*Passback*/}}
        </div>
        <div id="ConfigInStreamBox" data-adtype="2" class="box-config" hidden>
            <div class="sidebar-content">
                <h3>Renderer</h3>
                <div class="sidebar-content-1 cus-selectpicker box-selectpicker pp-9">
                    <select id="renderer_instream" name="renderer_instream" class="form-control  selectpicker">
                        <option value="1" selected>Valueimpression Player</option>
                        <option value="3">JWPlayer</option>
                        <option value="4">VideoJS</option>
                        <option value="5">FlowPlayer</option>
                        <option value="2">Other</option>
                        <option value="6">Overlay Ad</option>
                    </select>
                </div>
                <span class="form-text w-auto invalid-feedback"></span>
            </div>
            {{/*Renderer*/}}
            <div class="sidebar-content {{if eq .InventoryConfig.TableInventoryConfig.GamAutoCreate 1}}d-none{{end}}"
                 id="gam_ad_instream">
                <h3>{{$LangAdTag.GAMAdUnit}}
