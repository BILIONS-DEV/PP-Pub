                    <div class="pp-9">
                        <input type="url" class="form-control" id="feed" name="feed" placeholder="Feed URL"
                               autocomplete="off">
                        <span class="form-text w-auto invalid-feedback"></span>
                    </div>
                </div>
            </div>
            {{/*Feed*/}}
        </div>
        <div id="ConfigOutStreamPcBox" data-adtype="3" class="box-config " hidden>
