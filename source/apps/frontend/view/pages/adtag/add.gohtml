            <div class="sidebar-content renderer_instream_overlay_ad d-none">
                <h3>Request Banner Type</h3>
                <div class="pp7">
                    <label class="switch">
                        <input type="checkbox" id="banner_ad" name="banner_ad" checked>
                        <span class="slider round"></span>
                    </label>
                    <div class="pp8"></div>
                </div>
            </div>
            {{/*Request Banner Type*/}}

            <div class="sidebar-content renderer_instream_overlay_ad d-none">
                <h3>Request Video Type</h3>
                <div class="pp7">
                    <label class="switch">
                        <input type="checkbox" id="video_ad" name="video_ad" checked>
                        <span class="slider round"></span>
                    </label>
                    <div class="pp8"></div>
                </div>
            </div>
            {{/*Request Video Type*/}}

            <div class="sidebar-content">
                <h3>Content Source</h3>
                <div class="sidebar-content-1 cus-selectpicker box-selectpicker pp-9">
                    <select id="content_source" name="content_source" class="form-control input-full selectpicker">
                        <option value="1" selected>Playlist</option>
                        {{/*                            <option>Instream</option>*/}}
